<!-- Bootstrap 5 CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <style>
    body { font-family: Arial; padding: 20px; }
    table { width: 60%; margin-bottom: 30px; border-collapse: collapse; }
    th, td { border: 1px solid #999; padding: 10px; text-align: left; }
  </style>
</head>
<body>
  <h1>Bank Account Dashboard</h1>

  <table>
    <tr><th>Name</th><th>Account Type</th><th>Balance</th></tr>
    <% accounts.forEach(account => { %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.account_type %></td>
        <td>â‚¹<%= account.balance %></td>
      </tr>
    <% }) %>
  </table>

  <h3>Deposit</h3>
  <form action="/deposit" method="POST">
    <input type="number" name="account_id" placeholder="Account ID" required>
    <input type="number" name="amount" placeholder="Amount" required>
    <button type="submit">Deposit</button>
  </form>

  <h3>Withdraw</h3>
  <form action="/withdraw" method="POST">
    <input type="number" name="account_id" placeholder="Account ID" required>
    <input type="number" name="amount" placeholder="Amount" required>
    <button type="submit">Withdraw</button>
  </form>

  <a href="/admin" style="position: absolute; top: 20px; right: 20px;">Admin Login</a>

</body>
</html>
